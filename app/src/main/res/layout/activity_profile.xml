<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/userimage"
            android:scaleType="centerCrop"
            android:layout_marginBottom="12dp"
            android:padding="4dp" />

        <!-- Name -->
        <TextView
            android:id="@+id/usernameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="Dinushi Dilhani"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Email -->
        <TextView
            android:id="@+id/userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dinushi@email.com"
            android:textSize="16sp"
            android:textColor="#666"
            android:layout_marginBottom="16dp" />

        <!-- Edit Profile Button -->
        <Button
            android:id="@+id/editProfileBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:layout_marginBottom="24dp" />

        <!-- Add Post Section -->
        <EditText
            android:id="@+id/locationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter location (e.g., Ella, Sri Lanka)" />



        <!-- Image preview for selected photo -->
        <ImageView
            android:id="@+id/selectedImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:background="#ddd"
            android:visibility="gone" />

        <EditText
            android:id="@+id/postText"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="12dp"
            android:gravity="top|start"
            android:hint="Share your travel experience..."
            android:padding="12dp" />

        <!-- Buttons in one line -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/choosePhotoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Photo"
                android:layout_marginEnd="12dp" />

            <Button
                android:id="@+id/postButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post"
                android:backgroundTint="#3F51B5"
                android:textColor="#FFFFFF" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>


